{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "storyteller": {
      "root": "",
      "sourceRoot": "spa",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "spa/index.html",
            "main": "spa/main.ts",
            "tsConfig": "spa/tsconfig.app.json",
            "polyfills": "spa/polyfills.ts",
            "assets": [
              "spa/assets",
              "spa/favicon.ico"
            ],
            "styles": [
              "spa/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "spa/environments/environment.ts",
                  "with": "spa/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "storyteller:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "storyteller:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "storyteller:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "spa/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "spa/polyfills.ts",
            "tsConfig": "spa/tsconfig.spec.json",
            "scripts": [],
            "styles": [
              "spa/styles.scss"
            ],
            "assets": [
              "spa/assets",
              "spa/favicon.ico"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "spa/tsconfig.app.json",
              "spa/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "storyteller-e2e": {
      "root": "",
      "sourceRoot": "",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "storyteller:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "storyteller",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "st",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "st"
    }
  }
}
